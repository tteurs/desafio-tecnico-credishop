<h1>Proponentes</h1>

<table class="table table-striped table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Cpf</th>
      <th scope="col">Data nascimento</th>
      <th scope="col">Logradouro</th>
      <th scope="col">Numero</th>
      <th scope="col">Bairro</th>
      <th scope="col">Cidade</th>
      <th scope="col">Estado</th>
      <th scope="col">Cep</th>
      <th scope="col">Telefone pessoal</th>
      <th scope="col">Telefone referencia</th>
      <th scope="col">Salario</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @proponentes.each do |proponente| %>
      <tr>
        <td><%= proponente.nome %></td>
        <td><%= proponente.cpf %></td>
        <td><%= proponente.data_nascimento %></td>
        <td><%= proponente.logradouro %></td>
        <td><%= proponente.numero %></td>
        <td><%= proponente.bairro %></td>
        <td><%= proponente.cidade %></td>
        <td><%= proponente.estado %></td>
        <td><%= proponente.cep %></td>
        <td><%= proponente.telefone_pessoal %></td>
        <td><%= proponente.telefone_referencia %></td>
        <td><%= proponente.salario %></td>
        <td><%= link_to 'Editar', edit_proponente_path(proponente), data: {bs_toggle: 'modal', bs_target: '#newPorponenteModal', remote: true } %></td>
        <td><%= link_to 'Deletar', proponente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
    <%= paginate @proponentes, theme: 'bootstrap-5',
                   pagination_class: "pagination-sm flex-wrap justify-content-center",
                   nav_class: "d-inline-block"%>
</div>


<br>
<%= link_to 'Novo Proponente', new_proponente_path, class: "btn btn-primary btn-lg mb-4", data: {bs_toggle: 'modal', bs_target: '#newPorponenteModal', remote: true } %>

<%= link_to "Relat칩rio de Funcion치rios", relatorio_funcionarios_proponentes_path, class: "btn btn-primary btn-lg mb-4", data: {bs_toggle: 'modal', bs_target: '#reportModal', remote: true } %>


<!-- Modal -->
<div class="modal fade" id="newPorponenteModal" tabindex="-1" aria-labelledby="newPorponenteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="newPorponenteModalLabel">Proponente</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="newPorpForm">
      </div>
    </div>
  </div>
</div>

<!-- Modal Report-->
<div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="reportModalLabel">Relat칩rio de Funcion치rios por Faixa Salarial</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="report">
      </div>
    </div>
  </div>
</div>
