<h1>Proponentes</h1>

<table class="table table-striped table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Cpf</th>
      <th scope="col">Data nascimento</th>
      <th scope="col">Logradouro</th>
      <th scope="col">Numero</th>
      <th scope="col">Bairro</th>
      <th scope="col">Cidade</th>
      <th scope="col">Estado</th>
      <th scope="col">Cep</th>
      <th scope="col">Telefone pessoal</th>
      <th scope="col">Telefone referencia</th>
      <th scope="col">Salario</th>
      <th scope="col">Desconto INSS</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody id="proponentesTable">
    <% @proponentes.each do |proponente| %>
      <%= render "proponente_row", proponente: proponente %>
    <% end %>
  </tbody>
</table>

<div class="row">
    <%= paginate @proponentes, theme: 'bootstrap-5',
                   pagination_class: "pagination-sm flex-wrap justify-content-center",
                   nav_class: "d-inline-block"%>
</div>


<br>
<%= link_to 'Novo Proponente', new_proponente_path, class: "btn btn-primary btn-lg", data: {bs_toggle: 'modal', bs_target: '#newPorponenteModal', remote: true } %>

<%= link_to "Relat칩rio de Funcion치rios", relatorio_funcionarios_proponentes_path, class: "btn btn-primary btn-lg", data: {bs_toggle: 'modal', bs_target: '#reportModal', remote: true } %>


<!-- Modal -->
<div class="modal fade" id="newPorponenteModal" tabindex="-1" aria-labelledby="newPorponenteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="newPorponenteModalLabel">Proponente</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="newPorpForm">
      </div>
    </div>
  </div>
</div>

<!-- Modal Report-->
<div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="reportModalLabel">Relat칩rio de Funcion치rios por Faixa Salarial</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
